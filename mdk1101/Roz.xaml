<Window x:Class="mdk1101.Roz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdk1101"
        mc:Ignorable="d"
        Title="Window1" Height="651" Width="995">
    <Grid Margin="-42,-228,42,166" RenderTransformOrigin="0.526,0.616">
        <DataGrid x:Name ="rozisk" AutoGenerateColumns="False" Margin="109,274,251,214">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding cartoteka_id}"></DataGridTextColumn>

                <DataGridTextColumn Header="Статус" Binding="{Binding status}"></DataGridTextColumn>

                <DataGridTextColumn Header="Местоположение" Binding="{Binding mestopologenie}"></DataGridTextColumn>

                <DataGridTextColumn Header="Дата" Binding="{Binding data}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="126,530,0,0" VerticalAlignment="Top" Height="83" Width="156" Click="Button_Click_1"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="521,530,0,0" VerticalAlignment="Top" Height="83" Width="156" Click="Button_Click_2"></Button>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="325,530,0,0" VerticalAlignment="Top" Height="83" Width="156" RenderTransformOrigin="0.381,-0.351" Click="Button_Click"></Button>
    </Grid>
</Window>
